<knimeNode
	icon="db_list_keys.png"
	type="Manipulator"
	xmlns="http://knime.org/node/v3.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://knime.org/node/v3.1 http://knime.org/node/v3.1.xsd">
	<name>DB List Foreign Keys</name>

	<shortDescription>
		This node lists any foreign keys for a selected database table
	</shortDescription>

	<fullDescription>
		<intro>

			<p>This node lists any foreign key columns for the selected database
				table
			</p>
			<p>
				This node was developed by
				<a href="https://www.vernalis.com/">Vernalis Research</a>
				.
				For feedback and more information, please contact
				<a href="mailto:knime@vernalis.com">
					knime@vernalis.com
				</a>
			</p>
		</intro>
		<option name="Schema Name">The name of the schema</option>
		<option name="Table Name">The name of the table to use
		</option>


	</fullDescription>

	<ports>
		<inPort
			index="0"
			name="Database connection">Database connection
		</inPort>
		<outPort
			index="0"
			name="Foreign Keys">List of the foreign keys
		</outPort>

	</ports>

</knimeNode>
