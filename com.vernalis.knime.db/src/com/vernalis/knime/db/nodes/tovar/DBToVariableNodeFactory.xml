<knimeNode
	icon="db2var.png"
	type="Other"
	xmlns="http://knime.org/node/v3.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://knime.org/node/v4.1 http://knime.org/node/v4.1.xsd">
	<name>DB To Variable</name>

	<shortDescription>
		This node converts a database connection to a set of flow variables
	</shortDescription>

	<fullDescription>
		<intro>
			<p>This node converts a database connection listing the driver,
				database type, user name, JDBC URL if present
			</p>
			<p>
				This node was developed by
				<a href="http://www.vernalis-research.com/">Vernalis Research</a>
				.
				For feedback and more information, please contact
				<a href="mailto:knime@vernalis.com">
					knime@vernalis.com
				</a>
			</p>
		</intro>
	</fullDescription>

	<ports>
		<inPort
			index="0"
			name="Database connection">Database connection
		</inPort>
		<outPort
			index="0"
			name="Flow Variables">Flow variable port containing connection details
		</outPort>
	</ports>
</knimeNode>
