<knimeNode
	icon="./SpeedySMILES_stripbondstereo.png"
	type="Manipulator"
	xmlns="http://knime.org/node/v2.8"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://knime.org/node/v2.10 http://knime.org/node/v2.10.xsd">
	<name>Speedy SMILES Strip Double Bond Geometry</name>


	<shortDescription>
		Node to strip out explicitly defined double bond geometry labels
	</shortDescription>

	<fullDescription>
		<intro>
			<p>This node strips out explicitly defined double bond geometries
			</p>
			<p>
				This node was developed by
				<a href="http://www.vernalis-research.com/">Vernalis Research</a>
				.
				For feedback and more information, please contact
				<a href="mailto:knime@vernalis.com">
					knime@vernalis.com
				</a>
			</p>
		</intro>


		<option name="Select SMILES column">The SMILES column, containing molecules</option>
		<option name="Remove input columns">If checked, then the input column is removed
		</option>


	</fullDescription>


	<ports>
		<inPort
			index="0"
			name="SMILES Cells">Input Table containing a SMILES Column
		</inPort>

		<outPort
			index="0"
			name="Removed Double Bond Geometries">SMILES with explicit double bond geometry information removed
		</outPort>
	</ports>

</knimeNode>
