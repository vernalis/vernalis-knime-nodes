<knimeNode
	icon="db_distinct.png"
	type="Manipulator"
	xmlns="http://knime.org/node/v3.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://knime.org/node/v3.1 http://knime.org/node/v3.1.xsd">
	<name>Database DISTINCT</name>

	<shortDescription>
		This node performs a 'DISTINCT' operation on the selected column(s)
	</shortDescription>

	<fullDescription>
		<intro>
			<p>This node performs a 'DISTINCT' operation on the selected
				column(s), such that only 'distinct' combinations of column values
				are retained
			</p>
			<p>
				This node was developed by
				<a href="http://www.vernalis-research.com/">Vernalis Research</a>
				.
				For feedback and more information, please contact
				<a href="mailto:knime@vernalis.com">
					knime@vernalis.com
				</a>
			</p>
		</intro>
	</fullDescription>

	<ports>
		<inPort
			index="0"
			name="Database connection">Database connection
		</inPort>
		<outPort
			index="0"
			name="DISTINCT Database connection">Database connection with 'DISTINCT' applied to selected columns
		</outPort>
	</ports>
</knimeNode>
